.paste{:id => dom_id(paste)}
  %span.language= link_to "#{paste.default_language}", paste_path(paste)
  = link_to "copy ( #{pluralize(paste.line_count, 'line')} )", paste_path(paste, :format => 'text'), :class => 'copy', :title => 'copy to clipboard'
  = timeago(paste.created_at, :class=>'created_at')
  .paste-body
    ~ paste.preview
  = render :partial => 'tags', :object => paste.tags