.paste{:id => dom_id(paste)}
  .paste-header
    = render :partial => 'paste_header', :locals => {:paste => paste}
    = "( #{pluralize(paste.line_count, 'line')} of #{paste.default_language} )" 
    = timeago(paste.created_at, :class=>'created_at')
  .paste-body
    ~ paste.preview
  = render :partial => 'tags', :object => paste.tags