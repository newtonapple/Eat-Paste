!!! 1.0 Strict
%html{ :lang=>'en_us', 'xml:lang'=>'en_us', :xmlns=>'http://www.w3.org/1999/xhtml'}
  %head
    = stylesheet_link_tag 'screen'
    /[if lte IE 6]
      = stylesheet_link_tag 'ie6'
    = stylesheet_link_tag 'uv/dawn'  
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'
    = javascript_include_tag :all 
    %script{:type=>"text/javascript"}
      $(function(){  $('.created_at').timeago(); $('a.copy').clickToClipboard(); });
    %meta{ 'http-equiv'=>'content-type', :content=>'text/html; charset=utf-8' }
    %title 
      = @title
  %body
    #header
      %h1
        = link_to('Eat', new_paste_path) 
        = link_to('Some', pastes_path)
        = link_to('Paste', pastes_path)
        - form_tag search_pastes_path, :method => :get do 
          %label{:for => 'q'}
            Search: 
            = text_field_tag :q, h(params[:q])
            = submit_tag :search, :class => 'search'
    #content
      = yield
    #footer